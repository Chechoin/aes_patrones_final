{
  "get_bill_request": {
    "path_operation": "FindPerson",
    "path_params": {},
    "payload": {
      "id": $.bill_reference
    }
},
"get_bill_response": {
  "bill_reference": $.id,
  "success": $.name
},
"pay_bill_request": {
    "path_operation": "/objects",
    "method": "POST",
    "path_params": {},
    "payload": {
      "name": "Apple MacBook Pro 16",
      "data": {
        "year": $.payment_amount,
        "price": $.payment_amount,
        "CPU model": "Intel Core i9",
        "Hard disk size": "1 TB",
        "color": "silver"
   }
},
"pay_bill_response": {
  "bill_reference": $.id,
  "success": $.name
},
"update_bill": {
    "path_operation": "/objects/" & $.bill_reference,
    "method": "POST",
    "path_params": {},
    "payload": {
      "name": "Apple MacBook Pro 16",
      "data": {
        "year": $.payment_amount,
        "price": $.payment_amount,
        "CPU model": "Intel Core i9",
        "Hard disk size": "1 TB",
